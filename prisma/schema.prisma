generator client {
  provider = "prisma-client-js"
  output   = "../src/(generated)/prismaClient"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  appointments Appointment[]
}

model Patient {
  id           Int                     @id @default(autoincrement())
  firstName    String
  lastName     String
  appointments PatientsToAppointment[]
}

model Appointment {
  id         Int                     @id @default(autoincrement())
  provider   Provider                @relation(fields: [providerId], references: [id])
  providerId Int
  title      String
  start      DateTime
  end        DateTime
  patients   PatientsToAppointment[]
}

model PatientsToAppointment {
  patient       Patient     @relation(fields: [patientId], references: [id])
  patientId     Int // relation scalar field (used in the `@relation` attribute above)
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  appointmentId Int // relation scalar field (used in the `@relation` attribute above)

  @@id([patientId, appointmentId])
}
